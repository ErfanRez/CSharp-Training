@model List<CoreLayer.DTOs.Categories.CategoryDto>

@{
    ViewData["Title"] = "Categories";
    int counter = 1;
    ViewData["Selected"] = "category";
}

<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Admin" asp-controller="Category" asp-action="Index"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
</section>

<section>
    <a class="btn btn-outline-success" asp-area="Admin" asp-controller="Category" asp-action="Add">Add New</a>
    <div class="box box-body">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Subject</th>
                    <th>Sub Cat</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Where(m => m.ParentId == null))
                {
                    <tr>
                        <td>@counter</td>
                        <td>@item.Title</td>
                        <td>
                            @if(Model.Any(r => r.ParentId == item.Id))
                            {
                                <ul>
                                    @foreach(var sub in Model.Where(m=> m.ParentId == item.Id))
                                    {
                                        <li>
                                            @sub.Title
                                            <span>
                                                <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@sub.Id" class="btn btn-info btn-sm">Edit</a>
                                            </span>
                                        </li>
                                        
                                    }
                                </ul>
                            }
                            
                        </td>
                        <td>
                            <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">Edit</a>
                            <a asp-area="Admin" asp-controller="Category" asp-action="Add" asp-route-parentId="@item.Id" class="btn btn-success btn-sm">Add Sub</a>
                        </td>
                    </tr>

                    counter++;
                }
            </tbody>
        </table>
    </div>
</section>