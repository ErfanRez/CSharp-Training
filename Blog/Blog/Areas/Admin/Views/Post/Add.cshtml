@model Areas.Admin.Models.Posts.CreatePostModel
@inject CoreLayer.Services.Categories.ICategoryService _categoryService

@{
    ViewData["Title"] = "Add Post";
    ViewData["Selected"] = "post";
    var categories = _categoryService.GetAllCategories();
}

<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li><a asp-area="Admin" asp-controller="Post" asp-action="Index"><i class="fa fa-dashboard"></i>Posts</a></li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
</section>

<section class="content">
    <form class="box box-body row" method="post" asp-action="Add" asp-area="Admin" asp-controller="Post" enctype="multipart/form-data">
        <div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control"/>
                    <span asp-validation-for="Title"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Slug"></label>
                    <input asp-for="Slug" class="form-control" />
                    <span asp-validation-for="Slug"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" id="ckEditor"></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div>
                        <label asp-for="CategoryId"></label>
                        <select asp-for="CategoryId" class="form-control">
                            <option value="" disabled selected>Select</option>
                            @foreach(var item in categories.Where(c => c.ParentId == null))
                            {
                                <option value="@item.Id">
                                    @item.Title
                                </option>
                            }
                        </select>
                        <span asp-validation-for="CategoryId"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div>
                        <label asp-for="SubCategoryId"></label>
                        <select asp-for="SubCategoryId" class="form-control">
                            <option selected disabled></option>
                        </select>
                        <span asp-validation-for="SubCategoryId"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="ImageFile"></label>
                    <input type="file" asp-for="ImageFile" class="form-control" />
                    <span asp-validation-for="ImageFile"></span>
                </div>
            </div>
        </div>
        <div class="box-footer">
            <button class="btn btn-success" type="submit">Save</button>
        </div>
    </form>

</section>




@section scripts{
    <script>
        document.getElementById("CategoryId").addEventListener("change", (e) => {
            var categoryId = e.target.value;
            var subCategorySelect = document.getElementById("SubCategoryId");

            subCategorySelect.innerHTML = '';

            fetch("/admin/category/GetChildCategories?parentId=" + categoryId)
                .then(response => response.json())
                .then(data => {

                    

                    data?.forEach(category => {
                        var option = document.createElement("option");
                        option.value = category.id;
                        option.textContent = category.title;
                        subCategorySelect.appendChild(option);
                    });
                })
                .catch(error => console.error('Error:', error));
        });
    </script>
}