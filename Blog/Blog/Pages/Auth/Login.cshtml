@page
@model Blog.Pages.Auth.LoginModel
@{
    Layout = "Shared/_AuthLayout";
    ViewData["Title"] = "ورود به سایت";
}

<form action="">
    <h1>@ViewData["Title"]</h1>
    <div>
        <input type="text" placeholder="نام کاربری" required="" asp-for="Username" />
        <span asp-validation-for="Username" style=" color: red;"></span>
    </div>
    <div>
        <input type="password" placeholder="کلمه عبور" required="" asp-for="Password">
        <span asp-validation-for="Password" style=" color: red;"></span>
    </div>
    <div>
        <input type="submit" value="ورود" />
        <a asp-page="Register">ثبت نام</a>
    </div>
</form>